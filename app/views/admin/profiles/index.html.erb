<div class="card">
  <div class="card-header d-flex justify-content-between">
    <div class="header-title">

      <h1>Perfis</h1>
    </div>
  </div>
  <div id="companies" class="card-body">
    <div class="table-responsive my-4">

      <table id="basic-table-profiles" class="table table-striped mb-0" role="grid">
        <thead class="text-primary">
        <tr>
          <th><%= t('activerecord.attributes.profile.first_name') %></th>
          <th><%= t('activerecord.attributes.profile.last_name') %></th>
          <th><%= t('activerecord.attributes.profile.full_name') %></th>
          <th><%= t('activerecord.attributes.profile.nickname') %></th>
          <th><%= t('activerecord.attributes.profile.cpf') %></th>
          <th><%= t('activerecord.attributes.profile.number') %></th>
          <th><%= t('activerecord.attributes.profile.bio') %></th>
          <th><%= t('activerecord.attributes.profile.birthday') %></th>
          <th><%= t('activerecord.attributes.profile.avatar') %></th>
          <th><%= t('activerecord.attributes.profile.status') %></th>
          <th><%= t('activerecord.attributes.profile.user') %></th>
          <th><%= t('action') %></th>
        </tr>
        </thead>
        <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.first_name %></td>
            <td><%= profile.last_name %></td>
            <td><%= profile.full_name %></td>
            <td><%= profile.nickname %></td>
            <td><%= profile.cpf %></td>
            <td><%= profile.number %></td>
            <td><%= profile.bio %></td>
            <td><%= format_date(profile.birthday) %></td>
            <td><%= profile.avatar %></td>
            <td><%= display_boolean(profile.status) %></td>
            <td><%= profile.user.email %></td>
            <td><%= link_to t('show'), [:admin, profile], class: 'btn btn-info' %>
              <%= link_to t('edit'), edit_admin_profile_path(profile), class: 'btn btn-primary' %>
              <%= link_to t('destroy'), [:admin, profile], method: :delete, data: { confirm: t('confirm') }, class: 'btn btn-danger' %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

    <%== pagy_bootstrap_nav(@pagy) if @pagy.pages > 1 %>

    <%= link_to t('new'), new_admin_profile_path, class: 'btn btn-success' %>
  </div>
</div>
</div>