<div class="card">
  <div class="card-header d-flex justify-content-between">
    <div class="header-title">
      <h1>View tax</h1>
    </div>
  </div>
  <div class="card-body">
    <%= render @tax %>

    <div>
      <%= link_to t('edit'), edit_admin_tax_path(@tax), class: 'btn btn-primary' %> |
      <%= link_to t('back'), admin_taxes_path, class: 'btn btn-default' %>

      <%= button_to t('destroy'), [:admin, @tax], method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
