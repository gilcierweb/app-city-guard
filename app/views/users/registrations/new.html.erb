<div class="card shadow-lg">
  <div class="card-body p-5">
    <h1 class="fs-4 card-title fw-bold mb-4"><%= t('devise.registrations.title.new') %></h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: false }) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="mb-3">
        <%= f.label :email, class: 'form-label mb-2 text-muted' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, class: 'form-label mb-2 text-muted' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> <%= t('devise.registrations.form.text.min') %>)</em>
        <% end %><br/>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control form-control-lg' %>
      </div>

      <div class="mb-3">
        <%= f.label :password_confirmation, class: 'form-label mb-2 text-muted' %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control form-control-lg' %>
      </div>

      <p class="form-text text-muted mb-3">
        <%= t('devise.sessions.form.new.txtterms') %>
      </p>

      <div class="align-items-center d-flex">
        <%= f.submit t('devise.registrations.form.new.submit'), class: 'btn btn-primary ms-auto' %>
      </div>
    <% end %>

  </div>

  <%= render "users/shared/links" %>

</div>