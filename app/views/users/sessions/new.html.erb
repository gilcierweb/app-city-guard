<div class="card shadow-lg">
  <div class="card-body p-5">
    <h1 class="fs-4 card-title fw-bold mb-4"><%= t('devise.sessions.new.txtlogin') %></h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: false }) do |f| %>
      <div class="mb-3">
        <%= f.label :email, t('devise.sessions.form.email'), class: 'form-label mb-2 text-muted' %><br/>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control form-control-lg' %>
      </div>

      <div class="mb-3">
        <%= f.label :password, t('devise.sessions.form.password'), class: 'form-label mb-2 text-muted' %><br/>
        <%= f.password_field :password, autocomplete: "current-password", class: 'form-control form-control-lg' %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check">
          <%= f.check_box :remember_me, class: 'form-check-input' %>
          <%= f.label :remember_me, t('devise.sessions.form.remember_me'), class: 'form-check-label' %>
        </div>
      <% end %>

      <div class="align-items-center d-flex">
        <%= f.submit t('devise.sessions.form.new.submit'), class: 'btn btn-primary ms-auto' %>
      </div>
    <% end %>

  </div>

  <%= render "users/shared/links" %>

</div>